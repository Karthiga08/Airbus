<div class="search_flight text-center">
  <h1 class="header-text">Airbus Ticket</h1>
    <div class="x-panel">
    <%= form_tag("/planes", method: 'get') do%>
      <%= hidden_field_tag 'search', true%>
      <div class="row vertical-align">
        <div class="col-xs-4">
          <%= label_tag 'Origin' %>
          <%= text_field_tag 'origin', "", class: 'form-control text-center', required: true, placeholder: 'where you start'%>
        </div>
        <div class="col-xs-4">
          <%= label_tag 'Destination' %>
          <%= text_field_tag 'destination', "", class: 'form-control text-center', required: true, placeholder: 'Where you go'%>
        </div>
        <div class="col-xs-4">
          <%= label_tag 'Date' %>
          <%= date_field_tag 'date', "", class: 'form-control', required: true, placeholder: 'Enter Your PNR'%>
        </div>
      </div>
      <br>
      <div>
        <%= submit_tag 'Search', class: 'btn btn-primary' %>
      </div>
    <% end %>
      <hr>
      <br>
      <%= form_tag("/planes", method: 'get') do%>
      <div class="error"><%= flash[:error]%></div>
      <div class="row vertical-align">
        <div class="col-xs-6">
          <h5 class="pull-left">If already booked, search here the plane through your PNR Number</h5>
        </div>
        <div class="col-xs-3">
          <%= text_field_tag 'pnr', "", class: 'form-control text-center', placeholder: 'Enter Your PNR', required: true%>
        </div>
        <div class="col-xs-2">
          <%= submit_tag 'search' , class: 'btn btn-primary'%>
        </div>
      </div>
      <% end %>
    </div>
  <br>
  <div class="x-panel">
    <h4>Avaliable Planes</h4>
    <div class="x_content table-responsive">
      <table class="table table-striped">
        <tr>
          <th>Plane Name</th>
          <th>Plane Type</th>
          <th>Origin</th>
          <th>Destination</th>
          <th>Date</th>
          <th>TakeOff Time</th>
          <th>Actions</th>
        </tr>
        <% if @planes.present? %>
          <% @planes.each_with_index do |plane, index|%>
            <tr>
              <td class="text-left"><%= plane.name%></td>
              <td class="text-left"><%= plane.plane_type%></td>
              <td class="text-left"><%= plane.origin%></td>
              <td class="text-left"><%= plane.destination%></td>
              <td class="text-left"><%= plane.date%></td>
              <td class="text-left"><%= plane.plane_takeoff %></td>
              <td class="action_icon">
                <%= link_to '<i class="fa fa-book blue font16"></i>'.html_safe, new_booking_path(plane_id: plane), title: "Book Ticket" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td align="center" colspan="7"><p>Records Not Found </p></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>